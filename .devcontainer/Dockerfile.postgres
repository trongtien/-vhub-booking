FROM postgres:18-alpine

# Install additional tools if needed
RUN apk add --no-cache \
    curl \
    bash

# Set locale
ENV LANG en_US.utf8

# Expose PostgreSQL port
EXPOSE 5432

# Health check
HEALTHCHECK --interval=10s --timeout=5s --retries=5 \
    CMD pg_isready -U $POSTGRES_USER -d $POSTGRES_DB || exit 1
